import java.util.Scanner;
public class Ball{
    private static void main(String [] args)
    {
        Scanner keyboard = new Scanner(System.in);
        System.out.println("Enter the diameter of a ball");
        int user = keyboard.nextInt();

        System.out.println(ballArea(user));
        System.out.println(ballVolume(user));

        

    }
    private static double ballArea(int diameter)
    {
        double area;
        if (diameter == 0)
            area = 0;
        else
             area = 4 * Math.PI() *(d/2) * (d/2)
            
        return area;
            
    }
    private static double ballVolume(int diameter)
    {
        double volume;
        if(diameter == 0)
            volume =0;
        else   
            volume = 4/3*Math.PI() * (d/2) * (d/2) *(d/2);
        return volume;
    }
        
    
}